#!/bin/bash

set -euo pipefail

# https://sr.ht/~emersion/grim/
# note the + has no space after it!
grim -g "$(slurp)" "$HOME/Pictures/$(date +'screenshot_%s.png')"
# More grim utils:
# https://github.com/swaywm/sway/tree/master/contrib

# old x-windows way:
# https://github.com/naelstrof/maim#examples
# maim -s "$HOME/Pictures/screenshot_$(date +%s).png"
