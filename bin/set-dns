#!/bin/bash

case $1 in
    air)
        config=air
        addy1="10.4.0.1"
        addy2="10.5.0.1"
        ;;
    google)
        config=google
        addy1="8.8.8.8"
        addy2="8.8.4.4"
        ;;
    local)
        config=local
        addy1="127.0.0.1"
        ;;
    opendns)
        config=opendns
        addy1="208.67.222.222"
        addy2="208.67.220.220"
        ;;
    --help|*)
        echo "menu:"
        echo "  set-dns air"
        echo "  set-dns google"
        echo "  set-dns opendns"
        echo "  set-dns local"
        exit 0
        ;;
esac

unameOut="$(uname -s)"
case "${unameOut}" in
  Linux*) machine=Linux;;
  Darwin*) machine=Mac;;
  *) machine="UNKNOWN:${unameOut}"
esac

if [[ $machine == Mac ]]; then
  networksetup -setdnsservers Wi-Fi $addy1 $addy2
elif [[ $machine == Linux ]]; then
  sudo cp /etc/resolv.$config /etc/resolv.conf
else
  echo "machine not recognized: $machine"
  exit 1
fi
