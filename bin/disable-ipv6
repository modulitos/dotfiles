#!/bin/bash

unameOut="$(uname -s)"
case "${unameOut}" in
  Linux*) machine=Linux;;
  Darwin*) machine=Mac;;
  *) machine="UNKNOWN:${unameOut}"
esac

# TODO:
# https://www.techrepublic.com/article/how-to-disable-ipv6-on-linux/
# Issue the command sysctl -w net.ipv6.conf.all.disable_ipv6=1
# Issue the command sysctl -w net.ipv6.conf.default.disable_ipv6=1

# To re-enable IPv6, issue the following commands:

# sysctl -w net.ipv6.conf.all.disable_ipv6=0
# sysctl -w net.ipv6.conf.default.disable_ipv6=0

if [[ $machine == Mac ]]; then
  # networksetup -setv6automatic Wi-Fi
  networksetup -setv6off "Wi-Fi"
elif [[ $machine == Linux ]]; then
  sudo sh -c 'echo 1 > /proc/sys/net/ipv6/conf/wlp4s0/disable_ipv6'
else
  echo "machine not recognized: $machine"
  exit 1
fi
