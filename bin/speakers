#!/usr/bin/env sh
set -euo pipefail

# edifier speakers:
SPEAKERS_DEVICE_ID="7C:96:D2:05:D1:7D"

case "$1" in
  info|i)
    bluetoothctl info $SPEAKERS_DEVICE_ID
  ;;
  connect|c)
    bluetoothctl connect $SPEAKERS_DEVICE_ID
  ;;
  disconnect|d)
    bluetoothctl disconnect $SPEAKERS_DEVICE_ID
  ;;
  *)
    printf '%s\n' \
           'Invalid input.' \
           '' \
           'Valid inputs are:' \
           'connect|c' \
           'disconnect|d' \
           '' \
           'goodbye!'
    ;;
esac
